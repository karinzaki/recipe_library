<header>
   <nav class="top_nav">
      <ul>
         <li><a href="/">Homepage</a></li>
         <li><a href="/recipe/<%= each_recipe["id"] %>/edit">Edit</a></li>
      </ul>
   </nav>
</header>

<main class="each_recipe">
   <h3 class="each_title"><%= each_recipe["meal_item"] %></h3>

   <div class="details">
      <div class="calories">Calorie Count: <%= each_recipe["calories"] %>cals</div>
      <div class="category">Category: 
         <% if each_recipe["category"] == "Breakfast" %>
            <a href="/breakfasts"><%= each_recipe["category"] %></a>
         <% elsif each_recipe["category"] == "AM Snack" %>
            <a href="/am_snacks"><%= each_recipe["category"] %></a>
         <% elsif each_recipe["category"] == "Lunch" %>
            <a href="/lunches"><%= each_recipe["category"] %></a>
         <% elsif each_recipe["category"] == "PM Snack" %>
            <a href="/pm_snacks"><%= each_recipe["category"] %></a>
         <% elsif each_recipe["category"] == "Dinner" %>
            <a href="/dinners"><%= each_recipe["category"] %></a>
         <% end %>
      </div>
   </div>
   <div class="recipe_content">
      <div class="content">
         <div class="ingredients_array">Ingredients: <%= each_recipe["ingredients"].split(',').join("\n") %></div>
         <div class="recipe_text">Recipe: <%= each_recipe["recipe"] %></div>
      </div>
      <div class="each_img">
         <img src="<%= each_recipe["image_url"]%>" alt="">
      </div>
   </div>
   

   <br />

   <div class="footer">
      <form action="/recipe/<%= each_recipe["id"]%>" method="POST">
         <div class="popup" role="alert">
            <div class="popup-message">
               <p>Are you sure you want to delete this recipe?</p>
               <ul class="buttons">
                  <input type="hidden" id="delete" name="_method" value="DELETE">
                  <li id="delete"><a href="#0"><input type="submit" value="Yes"></input></a></li>
                  <li><a href="#0"><input type="submit" value="No"></input></a></li>
               </ul>
               <a href="#0" class="popup-close">Close</a>
            </div> 
         </div> 
      </form>
   </div>
</main>

